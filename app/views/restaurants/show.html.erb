<div class="mt-20">
  <div class="card" style="width: 100%;">
    <h1 class="card-title"><%= @restaurant.name %></h1>
    <h2 class="card-text"><%= @restaurant.address %></h2>
    <p><em><%=@restaurant.category.capitalize %></em></p>
    <ul class="list-group">
      <% @restaurant.reviews.each do |review| %>
        <li class="list-group-item"><%= review.content %> <%= review.rating %>/5</li>
      <% end %>
    </ul>
  <%= link_to 'Back to list', restaurants_path %>
  <%= link_to 'Add a review', new_restaurant_review_path(@restaurant)  %>
  </div>
</div>

