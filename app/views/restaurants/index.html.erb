<div class="d-flex justify-content-between align-items-baseline" style="padding: 15px; margin-right: 30px; margin-left: 30px">
  <p class="align-items-center" style="color: white;margin-bottom: 0px; font-size: 35px">Restaurants</p>
  <%= link_to 'Add a restaurant', new_restaurant_path %>
</div>
  <div>
    <ul style="color: black" class="list-group">
      <% @restaurants.each do |restaurant| %>
        <li class="list-group-item" style="color: black; text-decoration: none; margin-bottom: 10px; margin-left: 30px; margin-right: 30px; border-radius: 6px; height: auto;"><%= link_to restaurant.name, restaurant_path(restaurant)%>
        <p style="color: black; font-style: italic;"><%= restaurant.category.capitalize %></p>
        </li>
      <% end %>
    </ul>
  </div>

